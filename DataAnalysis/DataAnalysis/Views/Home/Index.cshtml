@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css">
<style>
    #myCarousel {
        margin-top: 10px;
        text-align: center;
        width: 1200px;
        height: 600px;
    }
</style>
<script src="https://cdn.bootcss.com/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function(){
    $('#myCarousel').carousel({ interval: 3000 });
    });
</script>
<div id="myCarousel" class="carousel slide">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/Images/kchart-demo.png" alt="First slide" style="width: 850px; height: 500px; margin:0 auto">
            <a href="../candlestick/index" class="btn btn-primary btn-lg" id="searchLink" style="margin-top: 5px; background-color:black;">K Chart Analysis &raquo;</a>
        </div>
        <div class="item">
            <img src="~/Content/Images/pure-data-demo.png" alt="Second slide" style="width: 850px; height: 500px; margin:0 auto">
            <a href="../stocks/index" class="btn btn-primary btn-lg" id="searchLink" style="margin-top: 5px; background-color:black;">Pure Stock Analysis &raquo;</a>
        </div>
        <div class="item">
            <img src="~/Content/Images/piechart-demo.png" alt="Third slide" style="width: 800px; height: 500px; margin:0 auto">
            <a href="../Piechart/index" class="btn btn-primary btn-lg" id="searchLink" style="margin-top: 5px; background-color:black;">Pie Chart Analysis &raquo;</a>
        </div>
    </div>
    <a class="carousel-control left" href="#myCarousel"
       data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel"
       data-slide="next">&rsaquo;</a>
</div>